#include<stdio.h>
void main()
{
	int a[10][10],i,j,m,n,sum;
	printf("Size of a");
	scanf("%d%d",&m,&n);
	printf("Enter  elements to a");
	for(i=0;i<m;i++)
	{
		for(j=0;j<m;j++)
		{
			scanf("%d\t",a[i][j]);
		}
	}
	printf("Th matrix a is\n");
	for(i=0;i<m;i++)
	{
		for(j=0;j<n;j++)
		{
			printf("%d\t",a[i][j]);
		}
		printf("\n");
	}
	for(j=0;j<n;j++)
	{
		sum=0;
		for(i=0;i<m;i++)
		{
			sum=sum+a[i][j];
		}
		printf("%d is the sum of column",j+1,sum);
	}
}
